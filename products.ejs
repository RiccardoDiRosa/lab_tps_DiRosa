<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Prodotti di rosa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Poppins', sans-serif;
    }
    .card {
      transition: transform 0.3s ease;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
    }
    .page-title {
      background: linear-gradient(to right, #8e44ad, #9b59b6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  </style>
</head>
<body>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-4 border-bottom pb-3">
      <h1 class="page-title fw-bold">Scopri i Nostri Prodotti</h1>
      <div class="btn-group mt-3 mt-md-0">
        <a href="/products/new" class="btn btn-success">
          <i class="fas fa-plus"></i> nuovo Prodotto
        </a>
        <a href="/" class="btn btn-outline-secondary">
          <i class="fas fa-home"></i> Home
        </a>
      </div>
    </div>

    <% if (products.length === 0) { %>
      <div class="alert alert-warning text-center p-5">
        <i class="fas fa-box-open fa-3x mb-3"></i>
        <p class="mb-3">Non ci sono prodotti disponibili al momento.</p>
        <a href="/products/new" class="btn btn-success">Aggiungi il primo prodotto</a>
      </div>
    <% } else { %>
      <div class="row g-4">
        <% products.forEach(function(product) { %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold"><%= product.name %></h5>
                <p class="card-text text-muted mb-2"><%= product.description %></p>
                <p class="text-primary fw-bold fs-5 mb-4">â‚¬<%= product.price.toFixed(2) %></p>
                <div class="mt-auto d-flex gap-2">
                  <a href="/products/<%= product._id %>/edit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-edit"></i> Modifica
                  </a>
                  <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="w-100">
                    <button type="submit" class="btn btn-outline-danger w-100">
                      <i class="fas fa-trash"></i> cancella
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <footer class="bg-light text-center py-4 mt-5 border-top">
    <p class="mb-1">&copy;Negozio. Tutti i diritti riservati.</p>
    <div class="d-flex justify-content-center gap-3">
      <a href="#" class="text-secondary"><i class="fab fa-facebook fa-lg"></i></a>
      <a href="#" class="text-secondary"><i class="fab fa-instagram fa-lg"></i></a>
      <a href="#" class="text-secondary"><i class="fab fa-twitter fa-lg"></i></a>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
